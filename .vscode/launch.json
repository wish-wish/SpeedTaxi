{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "android",
            "request": "attach",
            "name": "Android Attach",
            "appSrcRoot": "${workspaceRoot}/app/src/main",
            "adbPort": 57241,
            "processId": "${command:PickAndroidProcess}"
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome against localhost",
            "url": "http://localhost:7456",
            "webRoot": "${workspaceFolder}"
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "CocosCreator Launch Chrome against localhost",
            "url": "localhost:7456",
            "webRoot": "${workspaceFolder}"
        }
    ]
}